<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/section_current_speed"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/activity_trip_detail">

    <TextView
        android:id="@+id/currentSpeed_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textSize="@dimen/font_label_size"
        android:text="@string/string_speed"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/currentSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_label_big_size"
            android:text="0"
            android:layout_marginLeft="2dip" />

        <TextView
            android:id="@+id/currentSpeed_kmh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_label_ad_size"
            android:text="@string/string_kmh"
            android:layout_marginLeft="10dip" />

    </LinearLayout>

</LinearLayout>